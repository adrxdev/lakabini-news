# Dynamic post routes
/post/* /post/:splat 200

# Write routes
/write/* /write/:splat 200

# Preview route
/preview /preview 200

# Profile route
/profile /profile 200

# Auth route
/auth /auth 200

# Fallback for all other routes to index.html (SPA behavior)
